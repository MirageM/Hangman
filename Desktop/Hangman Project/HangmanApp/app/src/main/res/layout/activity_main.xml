<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView

        android:id="@+id/txtWelcome"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/txt_wel"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_en"
        android:textColor="@android:color/background_light" />


    <Button
        android:id="@+id/btnFrench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"

        android:text="@string/btn_fr"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/txtLetter"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="@string/txt_let" />

    <EditText
        android:id="@+id/edtLetter"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:ems="10"
        android:inputType="text"
        android:text ="" />

    <TextView
        android:id="@+id/txtwguess"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="180dp"
        android:gravity="left"
        android:text="@string/txt_nwg" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/image0" />

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="260dp"
        android:gravity="left"
        android:text="@string/res_st"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnrestart"
        android:layout_width="160dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="320dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="@string/btn_restgame"
        android:textColor="@android:color/background_light" />

</RelativeLayout >